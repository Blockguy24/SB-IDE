<Window x:Class="SB_IDE.Dialogs.FlowChart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SB_IDE.Dialogs"
        mc:Ignorable="d"
        Title="FlowChart" Height="500" Width="500" Icon="/SB-IDE;component/AppIcon.ico" ShowInTaskbar="False" Topmost="True" Loaded="Window_Loaded" Closing="Window_Closing"  Deactivated="Window_Deactivated">
    <Grid>
        <Button x:Name="buttonZoomIn" Content="Zoom In" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="buttonZoomIn_Click" Margin="10,10,0,0" Panel.ZIndex="2"/>
        <Button x:Name="buttonZoomOut" Content="Zoom Out" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="buttonZoomOut_Click" Margin="90,10,0,0" Panel.ZIndex="2"/>
        <Button x:Name="buttonUpdate" Content="Update" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="buttonUpdate_Click" Margin="170,10,0,0" Panel.ZIndex="2"/>
        <ScrollViewer x:Name="scrollViewer" Margin="10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <Canvas x:Name="canvas" Margin="10">
            </Canvas>
        </ScrollViewer>
    </Grid>
</Window>
